{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext", 
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true, 
		"strictNullChecks": true,
		"strictFunctionTypes": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true, 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
